<h2>Забыли свой пароль?</h2>

<div class="row">
  <div class="col-md-8 mx-auto">
    <div class="myform form ">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control my-input" %>
        </div>

        <div class="actions">
            <%= f.submit "Прислать на почту инструкцию для восстановления", class: "btn btn-block btn-success" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
