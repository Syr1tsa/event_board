  <div class="col-md-10 mx-auto text-center">
      <h1 class="wv-heading--title">
        Регистрация на сайте BBQ
      </h1>
  </div>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="myform form ">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control my-input",
                              placeholder: "Email" %>
          </div>
          <div class="form-group">
            <%= f.label "Пароль" %>
            <% if @minimum_password_length %>
                <em>(минимум <%= @minimum_password_length %> символов)</em>
                <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control my-input" %>
          </div>
          <div class="form-group">
            <%= f.label "Подвтерждение пароля" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control my-input" %>
          </div>
          <div class="text-center ">
            <%= f.submit "Зарегестрироваться!", class: " btn btn-block send-button tx-tfm" %>
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
