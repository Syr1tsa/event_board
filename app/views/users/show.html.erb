<div class="text-center">
  <h1><%= @user.name %></h1>

  <%= image_tag user_avatar(@user), width: '250px' %>

  <% if current_user == @user %>
  <div class="buffer-both">
    <%= link_to "Редактировать профиль", edit_user_path(@user),
                class: 'btn btn-info' %>
    <%= link_to 'Удалить свой аккаунт', user_path(@user), method: :delete, data: {confirm: t('are_you_sure')}, class: ' btn btn-danger' %>
  </div>
  <% end %>

  <div class="row">
    <div class="col-md-12">
      <% if @user.events.any? %>
        <h3>Организовал:</h3>
        <div class="row">
          <%= render partial: 'events/event', collection: @user.events %>
        </div>
      <% else %>
        <p class="buffer-top">Пользователь пока не организовал ни одного события</p>
      <% end %>
    </div>
  </div>
</div>
